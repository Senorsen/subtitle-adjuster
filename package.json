{
  "name": "subtitle-adjuster",
  "version": "1.4.0",
  "description": "A tool to adjust subtitle timings",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder -w",
    "build:mac": "electron-builder -m --universal",
    "build:linux": "electron-builder -l",
    "build:icon": "node scripts/convert-svg-to-ico.js",
    "build:icon:mac": "node scripts/convert-svg-to-icns.js",
    "build:icon:linux": "node scripts/convert-svg-to-png.js"
  },
  "keywords": [
    "subtitles",
    "electron",
    "gui"
  ],
  "author": "Senorsen",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.13.3",
    "ico-endec": "^0.1.6",
    "sharp": "^0.33.2"
  },
  "build": {
    "appId": "com.senorsen.subtitle-adjuster",
    "productName": "Subtitle Adjuster",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities",
      "arch": ["arm64", "x64"]
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon_512x512.png",
      "category": "Utility"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Subtitle Adjuster",
      "include": "installer/nsis.nsh",
      "perMachine": false,
      "allowElevation": true,
      "packElevateHelper": true
    }
  }
}
