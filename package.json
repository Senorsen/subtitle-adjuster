{
  "name": "subtitle-adjuster",
  "version": "1.2.0",
  "description": "A tool to adjust subtitle timings",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder -w",
    "build:mac": "electron-builder -m"
  },
  "keywords": [
    "subtitles",
    "electron",
    "gui"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.13.0",
    "ico-endec": "^0.1.6",
    "sharp": "^0.33.2"
  },
  "build": {
    "appId": "com.senorsen.subtitle-adjuster",
    "productName": "Subtitle Adjuster",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Subtitle Adjuster",
      "include": "installer.nsh",
      "perMachine": true,
      "allowElevation": true
    }
  }
}
